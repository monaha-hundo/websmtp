@model IndexModel
<form class="d-inline-flex align-items-center ps-2" action="/" method="get" style="  flex: 0 0 68px; border-left: 1pt solid var(--bs-border-color);">
    
    <div class="input-group my-2">
        <span class="input-group-text" id="basic-addon1">
            <i class="bi bi-search"></i> 
        </span>
        <input name="filter" id="filter" type="text" class="form-control from-control-sm" placeholder="Search messages"
            aria-label="Any text value" aria-describedby="basic-addon1" />
    </div>
    <div style="flex: 1 1 100%"></div>
    <a class="btn btn-secondary mx-2 my-2 text-nowrap" href="/logout" style="flex: 1 1 140px">
        <i class="bi bi-door-open"></i> Disconnect
    </a>
</form>