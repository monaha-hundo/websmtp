@page
@model MessageViewModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Home page";
}

<div class="" style="width: 100%;">
    <div class="p-2 mb-2" role="group" aria-label="Basic example" style="border-bottom: 1pt solid var(--bs-border-color);">
        <button onclick="closeMsg()" type="button" class="btn btn-secondary"><i class="bi bi-arrow-left"></i></button>
        @if (!Model.Message.Deleted)
        {
            <button onclick="deleteMsg()" type="button" class="btn btn-secondary"><i class="bi bi-trash"></i></button>
        }
        <!--<button type="button" class="btn btn-secondary"><i class="bi bi-tag"></i></button>-->
    </div>

    <h3 class="my-3 mx-4 px-1 pe-5">@Model.Message.Subject</h3>


    <div class="border rounded p-3 mx-4">
        <div class="d-flex align-items-center">
            @switch (Model.Message.Importance)
            {
                case "High":
                    <i class="bi bi-exclamation-circle me-2" style="font-size: 1.5rem; color: red;"></i>
                    <span style="font-weight: 900; display: inline-block; min-width: 50px">High Priority</span>
                    break;
                case "Low":
                    <i class="bi bi-thermometer-low me-2" style="font-size: 1.5rem; color: lightslategray;"></i>
                    <span style="font-weight: 900; display: inline-block; min-width: 50px">Low Priority</span>
                    break;
                default:
                    break;
            }
        </div>
        <div style="display: flex; align-items: center;">
            <div class="my-1">
                <span style="font-weight: bold; display: inline-block; min-width: 50px">Date:</span>
                @Model.Message.ReceivedOn.Date.ToLongDateString()
            </div>
        </div>
        <div style="display: flex; justify-content: space-between">
            <div class="my-1">
                <span style="font-weight: bold; display: inline-block; min-width: 50px">From:</span>
                @Model.Message.From
            </div>
        </div>
        <div style="display: flex; justify-content: space-between">
            <div class="my-1">
                <span style="font-weight: 900; display: inline-block; min-width: 50px">To:</span>
                @Model.Message.To
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Message.Cc))
        {
            <div style="display: flex; justify-content: space-between">
                <div class="my-1">
                    <span style="font-weight: bold; display: inline-block; min-width: 50px">Cc:</span>
                    @Model.Message.Cc
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Message.Bcc))
        {
            <div style="display: flex; justify-content: space-between">
                <div class="my-1">
                    <span style="font-weight: bold; display: inline-block; min-width: 50px">Bcc:</span>
                    @Model.Message.Bcc
                </div>
            </div>
        }

        <!--
            <div style="display: flex; justify-content: space-between">
                <div class="my-1">
                    <span style="font-weight: bold; display: inline-block; min-width: 50px">Internal ID:</span>
            @Model.Message.Id.ToString("N")
                </div>
            </div>
        -->
        @if (Model.Message.Attachements.Count > 0)
        {
            <div class="mb-2 p-2">
                @foreach (var att in Model.Message.Attachements)
                {
                    <a class="badge rounded-pill text-bg-primary p-2"
                       href="/api/messages/@Model.Message.Id/attachements/@att.Filename">

                        <i class="bi bi-paperclip"></i>
                        @att.Filename
                    </a>
                }
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Message.HtmlContent))
        {
            <div style="font-weight: bold; ">Html Content</div>
            <iframe id="html-content" class="" style="width: 100%; "
                    src="/api/messages/@(Model.Message.Id).html"></iframe>
        }

        @if (!string.IsNullOrEmpty(Model.Message.TextContent))
        {
            <div style="font-weight: bold; ">Text Content</div>
            <div class="">@Model.Message.TextContent</div>
        }

        <div class="mt-2">
            <div style="font-weight: bold; ">Raw</div>
            <pre>@System.Text.UTF8Encoding.UTF8.GetString(Model.Message.Raw)</pre>
        </div>
    </div>
</div>

<style>
    table.msg-view {
        width: 100%;
    }

        table.msg-view tr td.header {
            max-width: 320px;
        }
</style>

@section Scripts {
    <script>
        function showHtmlContent(el) {
            var el = document.getElementById("html-content");
            let isVisible = el.style.display == 'block';
            let visibility = isVisible ? 'none' : 'block';
            el.style.display = visibility;
        }
        function showSource(el) {
            var el = document.getElementById("source-content");
            let isVisible = el.style.display == 'block';
            let visibility = isVisible ? 'none' : 'block';
            el.style.display = visibility;
        }
        function closeMsg() {
            window.parent.postMessage(`close-msg:_`, window.location.origin);
        }
        function deleteMsg() {
            window.parent.postMessage(`delete-msg:@Model.MsgId`, window.location.origin);
        }
    </script>
    <script>
        setInterval(() => window.parent.postMessage(`set-size:${document.documentElement.scrollHeight}`, window.location.origin), 100);
    </script>
}