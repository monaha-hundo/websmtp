@page
@model MyApp.Namespace.LoginModel


<div class="card login-card rounded-3 ma-4">
    <div class="row g-0 ">
        <div class="col-lg-12">
            <div class="card-body p-2">

                <div class="text-center">
                    <h4 class="mt-1 pb-1">websmtp</h4>
                </div>

                <form method="post">

                    @Html.AntiForgeryToken()

                    <p class="text-center" >Please login
                    </p>

                    @if(Model.Error){
                        <p class="text-center my-4 red" style="color: red;">
                            <strong>Could not login.</strong>
                        </p>
                    }

                    <div class="form-outline mb-4">
                        <input type="text" id="username" name="username" class="form-control text-center"
                            placeholder="Username" />
                        <label class="form-label visually-hidden" for="username">Username</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" id="password" name="password" class="form-control text-center"
                            placeholder="Password" />
                        <label class="form-label visually-hidden" for="password">Password</label>
                    </div>

                    <div class="text-center pt-1 pb-1">
                        <button class="btn btn-primary btn-block fa-lg" type="submit">Log
                            in</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>