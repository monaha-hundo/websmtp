@page
@model MyApp.Namespace.LoginModel

@section Head {
    <style>
        body{
            background-color: #16141c;
            /*background: radial-gradient(circle at 50%, #363242, #16141c);*/
            background: radial-gradient(circle at 50%, #262330, #16141c);
        }
    </style>
}

<div class="card login-card rounded-3 ma-4" style="box-shadow: 0 0 20px black;">
    <div class="row g-0 ">
        <div class="col-lg-12">
            <div class="card-body p-4">

                <div class="text-center">
                    <h4 class="mt-1 "> <i class="bi bi-fire "></i> web<span style="color: rgb(203, 29, 78);">s</span>mtp</h4>
                </div>

                <form method="post">

                    @Html.AntiForgeryToken()

                    @if (Model.Error)
                    {
                        <p class="text-center mt-4 red" style="color: rgb(203, 29, 78);">
                            <strong>Could not login.</strong>
                        </p>
                    }

                    <div class="form-outline my-4">
                        <input type="text" id="username" name="username" focus tabindex="0" class="form-control text-center"
                               placeholder="Username" />
                        <label class="form-label visually-hidden" for="username">Username</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" id="password" name="password" class="form-control text-center"
                               placeholder="Password" />
                        <label class="form-label visually-hidden" for="password">Password</label>
                    </div>

                    @if(Model.MfaEnabled)
                    {
                        <div class="form-outline mb-4">
                            <input type="text" id="otp" name="otp" class="form-control text-center"
                                   placeholder="OTP" />
                            <label class="form-label visually-hidden" for="password">OTP</label>
                        </div>
                    }

                    <div class="text-center pt-1 pb-1">
                        <button class="btn btn-primary btn-block fa-lg" type="submit">
                            Log in
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <script>document.getElementById('username').focus()</script>
</div>